{{template "header"}}

<div class="container">

  
  <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4">添加资讯</h1>
  <p class="lead"></p>
  </div>

  <div class=" mb-3">
    <div class=" mb-4">
      <div class="col-12 col-md">
       <form action="/info/create" method="post" class="form-horizontal" role="form" enctype="application/x-www-form-urlencoded">

          <div class="form-group">
            <label for="name" class="col-sm-2 control-label">标题</label>
            <div class="col-sm-12">
              <input type="text" class="form-control" id="name" name="name" placeholder="请输入资讯标题">
            </div>
          </div>

          <div class="form-group">
            <label for="image" class="col-sm-2 control-label">资讯海报</label>
            <div class="col-sm-12">
              <input type="text" class="form-control" id="image" name="image" placeholder="请输入图片地址">
            </div>
          </div>

          <div class="form-group">
            <label for="actors" class="col-sm-2 control-label">正文</label>
            <div class="col-sm-12">
              <textarea class="form-control" id="content" name="content" placeholder="请输入正文">

              </textarea>
            </div>
          </div>

          <div class="form-group">
            <label for="mtype" class="col-sm-2 control-label">资讯类型</label>
            <div class="col-sm-12">
              <input type="text" class="form-control" id="mtype" name="mtype" placeholder="请输入资讯类型">
            </div>
          </div>

          <div class="form-group">
            <label for="minfo" class="col-sm-2 control-label">资讯简介</label>
            <div class="col-sm-12">
              <input type="text" class="form-control" id="minfo" name="minfo" placeholder="请输入资讯简介">
            </div>
          </div>

          <div class="form-group">
            <label for="mtime" class="col-sm-2 control-label">资讯时间</label>
            <div class="col-sm-12">
              <input type="text" class="form-control" id="mtime" name="mtime" placeholder="请输入资讯时间">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-12">
              <button type="submit" class="btn btn-sm btn-block btn-outline-primary">提 交</button>
            </div>
          </div>
       </form>
      </div>
    </div>
  </div>

</div>

{{template "footer"}}

